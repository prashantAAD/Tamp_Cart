<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.TampCart"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".tampcart.activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".tampcart.activity.SearchActivity"
            android:exported="false"
            android:label="Category"
            android:theme="@style/Theme.TampCart.Actionbar" />
        <activity
            android:name=".tampcart.activity.CategoryActivity"
            android:exported="false"
            android:label="Category"
            android:theme="@style/Theme.TampCart.Actionbar" />
        <activity
            android:name=".tampcart.activity.PaymentActivity"
            android:exported="false"
            android:label="Payment"
            android:theme="@style/Theme.TampCart.Actionbar" />
        <activity
            android:name=".tampcart.activity.CheckOutActivity"
            android:exported="false"
            android:label="Checkout"
            android:theme="@style/Theme.TampCart.Actionbar" />
        <activity
            android:name=".tampcart.activity.CartActivity"
            android:exported="false"
            android:label="Shopping Cart"
            android:theme="@style/Theme.TampCart.Actionbar" />
        <activity
            android:name=".tampcart.activity.ProductDetailedActivity"
            android:exported="false"
            android:theme="@style/Theme.TampCart.Actionbar" />
        <activity
            android:name=".tampcart.activity.MainActivity"
            android:exported="true">

        </activity>
    </application>

</manifest>